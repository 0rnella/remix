{
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["dist", "__tests__", "**/node_modules/**"],
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2020"],
    "target": "ES2020",
    "module": "ES2020",

    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "jsx": "react",
    "declaration": true,
    "emitDeclarationOnly": true,
    "skipLibCheck": true,

    "rootDir": ".",
    "outDir": "../../build/node_modules/@remix-run/react/dist",
    "composite": true
  }
}
