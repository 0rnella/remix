{
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["__tests__", "node_modules"],
  "compilerOptions": {
    "lib": ["ES2019", "DOM.Iterable"],
    "target": "ES2019",

    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": true,

    "declaration": true,
    "emitDeclarationOnly": true,
    "skipLibCheck": true,

    "outDir": "../../build/node_modules/@remix-run/serve",
    "rootDir": "."
  }
}
